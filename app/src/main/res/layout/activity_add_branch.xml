<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TeacherActivity.AddBranch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/developer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:fontFamily="@font/baloo_bhai"
                android:text="You are adding a new branch"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image2323View3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@android:drawable/stat_sys_warning"
                    app:tint="#FF0000" />

                <TextView
                    android:id="@+id/textVie232332w3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:text="@string/note"
                    android:textColor="#25D002" />

            </LinearLayout>

            <EditText
                android:id="@+id/tBranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/edit_text"
                android:ems="40"
                android:hint="Enter the name of the branch like Ex,CE,CSE"
                android:inputType="textMultiLine|textPersonName"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColorHint="#B3B2B2"
                android:textColor="#252525"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/tInsertBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:backgroundTint="@color/textColor"
                android:textAllCaps="false"
                android:fontFamily="@font/baloo_bhai"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="click to add"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>